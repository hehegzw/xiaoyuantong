<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/titlbar"></include>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="5dp" />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="#e4714b"
            android:orientation="vertical"

            >
            <TextView
                android:id="@+id/lost_found_first_detail_content"
                android:layout_width="fill_parent"
                android:layout_height="70dp"
                android:text="么么哒"

                android:textSize="20dp"
                />
            <RelativeLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="昵 称: "
                    android:gravity="right"
                    android:textSize="18dp"
                    android:textColor="#c7bbbb"
                    android:layout_toLeftOf="@+id/lost_found_first_detail_nickname"
                    />
                <TextView
                    android:id="@+id/lost_found_first_detail_nickname"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="么么哒"
                    android:layout_alignParentRight="true"
                    android:textSize="18dp"
                    android:textColor="#c7bbbb"
                    />
            </RelativeLayout>
            <TextView
                android:id="@+id/lost_found_first_detail_time"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="么么哒"
                android:gravity="right"
                android:textSize="18dp"
                android:textColor="#c7bbbb"
                />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="5dp" />
    </LinearLayout>
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20">
        <com.jlstudio.swzl.diy.MyListView
            android:id="@+id/lost_found_detail_list"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        </com.jlstudio.swzl.diy.MyListView>
    </ScrollView>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        >
        <EditText
            android:id="@+id/lost_found_detail_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="15"
            android:maxLength="50"
            />
        <Button
            android:background="@drawable/shape"
            android:id="@+id/lost_found_detail_button"
            android:layout_width="wrap_content"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="发送"/>
    </LinearLayout>
</LinearLayout>
