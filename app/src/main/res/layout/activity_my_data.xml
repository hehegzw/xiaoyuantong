<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fragment_back"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@android:color/holo_blue_light">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="我的资料"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10dp"
            android:gravity="center"
            android:text="@string/back"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#ffffffff" />

        <TextView
            android:id="@+id/update_datas"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:text="提交"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#ffffffff" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:orientation="vertical">
            <!--头像-->
            <RelativeLayout
                android:id="@+id/face"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/school_message_item_selector"
                android:clickable="true"
                android:gravity="center_vertical">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/iface"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginRight="5dp"
                    fresco:fadeDuration="300"
                    fresco:roundAsCircle="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    fresco:placeholderImage="@drawable/logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:gravity="center"
                    android:text="头像" />
            </RelativeLayout>

            <!--签名-->
            <RelativeLayout
                android:id="@+id/sign"
                style="@style/MyItem">

                <TextView
                    android:id="@+id/tsign"
                    style="@style/MyItem_right_text" />

                <TextView
                    style="@style/MyItem_left_text"
                    android:text="签名" />
            </RelativeLayout>

            <!--姓名-->
            <RelativeLayout
                android:id="@+id/name"
                style="@style/MyItem">

                <TextView
                    android:id="@+id/tname"
                    style="@style/MyItem_right_text" />

                <TextView
                    style="@style/MyItem_left_text"
                    android:text="姓名" />
            </RelativeLayout>

            <!--手机-->
            <RelativeLayout
                android:id="@+id/phone"
                style="@style/MyItem">

                <TextView
                    android:id="@+id/tphone"
                    style="@style/MyItem_right_text" />

                <TextView
                    style="@style/MyItem_left_text"
                    android:text="手机" />
            </RelativeLayout>

            <!--QQ-->
            <RelativeLayout
                android:id="@+id/qqNumber"
                style="@style/MyItem">

                <TextView
                    android:id="@+id/tqqNumber"
                    style="@style/MyItem_right_text" />

                <TextView
                    style="@style/MyItem_left_text"
                    android:text="QQ" />
            </RelativeLayout>

            <!--微信-->
            <RelativeLayout
                android:id="@+id/weixin"
                style="@style/MyItem">

                <TextView
                    android:id="@+id/tweixin"
                    style="@style/MyItem_right_text" />

                <TextView
                    style="@style/MyItem_left_text"
                    android:text="微信" />
            </RelativeLayout>

            <!--性别-->
            <RelativeLayout
                android:id="@+id/sex"
                style="@style/MyItem">

                <TextView
                    android:id="@+id/tsex"
                    style="@style/MyItem_right_text" />

                <TextView
                    style="@style/MyItem_left_text"
                    android:text="性别" />
            </RelativeLayout>

            <!--学校-->
            <RelativeLayout
                android:id="@+id/className"
                style="@style/MyItem">

                <TextView
                    android:id="@+id/tclassName"
                    style="@style/MyItem_right_text"
                    android:text="江西理工大学" />

                <TextView
                    style="@style/MyItem_left_text"
                    android:text="班级" />
            </RelativeLayout>

            <!--院系-->
            <RelativeLayout
                android:id="@+id/department"
                style="@style/MyItem">

                <TextView
                    android:id="@+id/tdepartment"
                    style="@style/MyItem_right_text"
                    android:text="信息工程系" />

                <TextView
                    style="@style/MyItem_left_text"
                    android:text="院系" />
            </RelativeLayout>

            <Button
                android:id="@+id/updatapwd"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_below="@+id/btn_phone_call"
                android:layout_marginTop="8dp"
                android:background="#00ff00"
                android:text="修改密码"
                android:textColor="@android:color/primary_text_dark" />
        </LinearLayout>

    </ScrollView>


</LinearLayout>
